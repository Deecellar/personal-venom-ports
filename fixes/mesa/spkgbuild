# description	: OpenGL compatible 3D graphics library
# depends	: python3-mako llvm elfutils bison flex libxext libxdamage libxshmfence libxxf86vm libxrandr libdrm libglvnd

name=mesa
version=21.2.5
release=1
source="https://mesa.freedesktop.org/archive/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd    build
	
	meson --prefix=/usr \
	      --sysconfdir=/etc \
	      -Dvalgrind=disabled \
	      -Dglx=dri \
	      -Degl=enabled \
	      -Dosmesa=true \
	      -Dgallium-nine=true \
	      -Dplatforms=x11 \
	      -Dglvnd=true \
	      -Dllvm=enabled \
	      -Dgallium-drivers=r300,r600,iris,svga,swrast,radeonsi,nouveau \
	      -Dvulkan-drivers=amd,intel \
	      -Ddri-drivers=i915,i965,nouveau \
	      ..
	ninja
	DESTDIR=$PKG ninja install

	# indirect rendering symlink
	ln -s libGLX_mesa.so.0 $PKG/usr/lib/libGLX_indirect.so.0
}
