# description	: C Unit Test Framework
# homepage	: 
# depends	: 

name=cunit
version=2.1
release=3
noextract=""
backup=""
source="https://newcontinuum.dl.sourceforge.net/project/cunit/CUnit/2.1-3/CUnit-2.1-3.tar.bz2"

build() {
	cd CUnit-$version-$release
	./bootstrap
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
