# description   : Zig Language Compiler / C Compiler / C++ Compiler
# homepage      : https://ziglang.org
# depends       : cmake llvm clang lld 

name=zig
version=0.10.0
release=dev.1030+90059a12e
noextract=""
backup=""
source="https://ziglang.org/builds/zig-$version-$release.tar.xz"

build() {
	cd $name-$version-$release
	mkdir build
	cd build
	cmake -G Ninja  -DCMAKE_BUILD_TYPE=Release ..
	ninja install
	mkdir $PKG/usr/ -p
	cp -r $SRC/$name-$version-$release/build/bin $PKG/usr/
	cp -r $SRC/$name-$version-$release/build/lib $PKG/usr/
}
