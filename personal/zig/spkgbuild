# depends       : cmake llvm clang lld 
name=zig
version=0.9.0dev.1622+71388b980
release=1
noextract=""
backup=""
source="https://ziglang.org/builds/zig-0.9.0-dev.1622+71388b980.tar.xz"

build() {
	ls
	cd $name-0.9.0-dev.1622+71388b980
	mkdir build
	cd build
	cmake -DCMAKE_BUILD_TYPE=Release ..
	make install DESTDIR=$PKG
	
}
