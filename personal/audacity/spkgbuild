# description	: Audio Edition Tooling
# homepage	: www.audacityteam.org
# depends	: libsndfile wxgtk3 ffmpeg

name=audacity
version=3.1.3
release=1
noextract=""
backup=""
source="https://github.com/audacity/audacity/releases/download/Audacity-$version/audacity-$version-source.tar.gz"

build() {
	ls
	cd Audacity-$version-Source
	mkdir build
	cd build
	cmake -Daudacity_use_ffmpeg=loaded ..
	make
	make DESTDIR=$PKG install
}
