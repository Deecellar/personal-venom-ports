# description	: GBA Emulator and debugger
# homepage	: mgba.io
# depends	: cmake pkg-config libzip ffmpeg 

name=mgba
version=0.9.2
release=1
noextract=""
backup=""
source="https://github.com/mgba-emu/mgba/archive/$version.tar.gz"

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX:PATH=$PKG/usr ..
	make
	sudo make install
}
