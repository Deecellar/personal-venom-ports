# description   : Zig Language Compiler / C Compiler / C++ Compiler
# homepage      : https://ziglang.org
# depends       : cmake llvm clang lld 

name=zig-stable
version=0.9.0
release=1
noextract=""
backup=""
source="https://ziglang.org/downloads/$version/zig-$version.tar.xz"

build() {
	cd zig-$version
	mkdir build
	cd build
	cmake -G Ninja  -DCMAKE_BUILD_TYPE=Release ..
	ninja install
	mkdir $PKG/usr/ -p
	cp -r $SRC/zig-$version/build/bin $PKG/usr/
	cp -r $SRC/zig-$version/build/lib $PKG/usr/
}
