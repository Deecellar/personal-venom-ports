# description	: Zig Language Compiler / C Compiler / C++ Compiler 
# homepage	: https://ziglang.org
# depends	: 

name=zig-stable
version=0.8.1
release=1
noextract=""
backup=""
source="https://ziglang.org/download/${version}/zig-linux-x86_64-${version}.tar.xz"

build() {
	ls
	cd zig-linux-x86_64-$version
	mkdir -p $PKG/usr/bin
	mv zig zig-stable
	cp -r zig-stable $PKG/usr/bin
}
