# description	: Elixir is a dynamic, functional language designed for building scalable and maintainable applications# homepage	: 
# depends	: perl ncurses vte3

name=elixir
version=1.13.1
release=1
source="https://github.com/elixir-lang/elixir/archive/refs/tags/v$version.tar.gz"

build() {
	cd $name-$version
	make compile
	make DESTDIR=$PKG install
	mv  $PKG/usr/local/* $PKG/usr 
	rm $PKG/usr/local -r
}
